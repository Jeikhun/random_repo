                        <ul class="about">
                            <li>Kampaniyalar</li>
                            <li>Siparişini izlə</li>
                            <li>Əlaqə</li>
                        </ul>
                    </div>

                    <div class="bottom">
                        <div class="left-nav">

                            <div class="burger-icon">
                                <i class="bi bi-list-nested"></i>
                            </div>
                            <a asp-controller="home" asp-action="index" class="logo">
                                <img src="~/assets/images/image-04-08-23-15-05 (2)-modifieddddd (2).png" alt="">
                            </a>
                        </div>
                        <form action="" class="search">
                            <input type="text" placeholder="Kitab yaxud Müəllifin adı">
                            <i class="bi bi-search search-logo"></i>
                        </form>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="icon-container">
                                <div class="account">
                                    <span>Hesabım</span>
                                    <span class="acc-name">@User.Identity.Name</span>
                                </div>
                                <div class="icons">
                                    <i class="bi bi-search"></i>
                                    <i class="bi bi-person"></i>
                                    <i class="bi bi-heart"></i>
                                    <i class="bi bi-bag-check"></i>
                                </div>
                            </div>
                        
