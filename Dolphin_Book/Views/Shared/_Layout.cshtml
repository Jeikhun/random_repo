                                        </div>

                                    </div>
                                    <a asp-controller="account" asp-action="logout">
                                    <i class="bi bi-box-arrow-right" style="cursor: pointer"></i>

                                    </a>
                                </div>
                                <div style="background-color: #f5f5f5;padding: 15px; border-end-start-radius: 20px; border-end-end-radius: 20px;">
                                    <div class="client-acc-navigation">
                                        <div>
                                            <p>Siparişlerim</p>
                                            <i class="bi bi-chevron-right"></i>
                                        </div>
                                        <div>
                                            <p>Adreslərim</p>
                                            <i class="bi bi-chevron-right"></i>
                                        </div>
                                        <div>
