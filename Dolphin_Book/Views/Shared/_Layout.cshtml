                        {
                            <div class="icon-container">
                                <div class="account">
                                <a asp-controller="account" asp-action="login" style="text-decoration: none; font-weight: bold; color: black">
                                        <span>Giriş</span>
                                    </a>

                                <a asp-controller="account" asp-action="register" style="text-decoration: none; font-weight: bold; color: black">
                                        <span class="acc-name">Qeydiyyat</span>
                                    </a>
                                </div>
                                <div class="icons">
                                    <i class="bi bi-search"></i>
                                <a asp-controller="account" asp-action="login" style="text-decoration: none; color: black">

                                    <i class="bi bi-person"></i>
                                    </a>
                                    <i class="bi bi-heart"></i>
                                    <i class="bi bi-bag-check"></i>
                                </div>
                            </div>
                        }
                    <div class="basket-container">
                            <div>

