@model Slide

<div class="container" style="margin: 16px;">
	<div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
	<form method="post" enctype="multipart/form-data">

		<div class="form-group">
			<label asp-for="@Model.FormFile">Photo:</label>
			<input class="form-control" type="file" asp-for="@Model.FormFile" />
			<span asp-validation-for="@Model.FormFile" class="text text-danger"></span>
		</div>
		@Html.AntiForgeryToken()
		<button type="submit" style="width: 180px; margin-top: 16px;" class="btn btn-success btn-rounded">Create</button>
	</form>
</div>
