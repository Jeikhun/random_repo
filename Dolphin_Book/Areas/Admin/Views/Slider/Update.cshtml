@model Slide

<div class="container" style="margin: 16px;">
	<div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
	<form method="post" enctype="multipart/form-data">


		<div class="form-group">
			<label asp-for="@Model.FormFile">File:</label>
			<input type="file" class="form-control" asp-for="@Model.FormFile" />
			<span asp-validation-for="@Model.FormFile" class="text text-danger"></span>
		</div>
		<div>
		<img style="width:100px;height:100px; margin: 14px 0px;" src="~/admin/img/images/@Model.Image" />
		</div>


		@Html.AntiForgeryToken()
		<button type="submit" style="width: 180px;" class="btn btn-success btn-rounded">Update</button>
	</form>
</div>
